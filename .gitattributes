# Normalize text files; keep LF in repo
* text=auto

# Common source/text files forced to LF in repository
*.php        text eol=lf
*.js         text eol=lf
*.css        text eol=lf
*.md         text eol=lf
*.txt        text eol=lf
*.htaccess   text eol=lf
*.html       text eol=lf
*.json       text eol=lf
*.yml        text eol=lf
*.yaml       text eol=lf

# Binary assets (no line ending conversion)
*.png        binary
*.jpg        binary
*.jpeg       binary
*.webp       binary
*.gif        binary
*.svg        binary
*.ico        binary
*.zip        binary
*.pdf        binary
*.woff       binary
*.woff2      binary
*.ttf        binary
*.eot        binary
