# ضع هذا الملف داخل /uploads و /assets/uploads و /admin/uploads
Options -Indexes
<IfModule mod_php.c>
    php_flag engine off
</IfModule>

# منع أي تنفيذ PHP/PHAR/PHTML
<FilesMatch "\.(php|phtml|phar|php[0-9])$">
    Require all denied
</FilesMatch>

# امنع الوصول لملفات حساسة لو رفعت بالخطأ
<FilesMatch "\.(ini|log|sh|sql|env|yml|yaml|json)$">
    Require all denied
</FilesMatch>
